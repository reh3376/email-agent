{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://email-assistant.local/schemas/taxonomy.json",
  "title": "Email Classification Taxonomy",
  "description": "Schema for email classification taxonomy with 5 categories",
  "type": "object",
  "required": ["type", "version", "categories"],
  "properties": {
    "type": {
      "type": "string",
      "const": "email_categories",
      "description": "Type identifier for taxonomy"
    },
    "version": {
      "type": "string",
      "pattern": "^v\\d+$",
      "description": "Version identifier (e.g., v2)"
    },
    "categories": {
      "type": "array",
      "description": "List of classification categories",
      "minItems": 5,
      "maxItems": 5,
      "items": {
        "type": "object",
        "required": ["id", "name", "labels"],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4,
            "description": "Category ID (0-4)"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Category name"
          },
          "labels": {
            "type": "array",
            "description": "Available labels for this category",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "uniqueItems": true
          },
          "description": {
            "type": "string",
            "description": "Optional description of the category"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
