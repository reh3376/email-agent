{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://email-assistant.local/schemas/decision.json",
  "title": "Email Decision",
  "description": "Schema for individual email processing decisions (stored as NDJSON)",
  "type": "object",
  "required": [
    "id",
    "messageId",
    "timestamp",
    "email",
    "classification",
    "rulesMatched",
    "actions"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique decision identifier"
    },
    "messageId": {
      "type": "string",
      "description": "Email message ID"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Decision timestamp"
    },
    "email": {
      "type": "object",
      "description": "Email details",
      "required": ["subject", "from", "to", "receivedAt"],
      "properties": {
        "subject": {
          "type": "string"
        },
        "from": {
          "type": "string",
          "format": "email"
        },
        "to": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "email"
          }
        },
        "cc": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "email"
          }
        },
        "bcc": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "email"
          }
        },
        "replyTo": {
          "type": "string",
          "format": "email"
        },
        "receivedAt": {
          "type": "string",
          "format": "date-time"
        },
        "sentAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the email was sent"
        },
        "bodyPreview": {
          "type": "string",
          "description": "First 500 characters of body"
        },
        "hasAttachments": {
          "type": "boolean"
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["filename", "mimeType", "size"],
            "properties": {
              "filename": { "type": "string" },
              "mimeType": { "type": "string" },
              "size": { "type": "integer", "minimum": 0 },
              "storagePath": {
                "type": "string",
                "description": "Local path where attachment is stored"
              },
              "sha256Hash": {
                "type": "string",
                "description": "SHA256 hash of the attachment"
              }
            }
          }
        },
        "attachmentCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of attachments"
        },
        "importance": {
          "type": "string",
          "enum": ["low", "normal", "high"]
        },
        "isRead": {
          "type": "boolean"
        },
        "isFlagged": {
          "type": "boolean"
        }
      }
    },
    "classification": {
      "type": "object",
      "description": "5-tuple classification result",
      "required": ["reviewed", "type", "senderIdentity", "context", "handler"],
      "properties": {
        "reviewed": {
          "type": "string",
          "description": "Category 0: reviewed status"
        },
        "type": {
          "type": "string",
          "description": "Category 1: email type"
        },
        "senderIdentity": {
          "type": "string",
          "description": "Category 2: sender identity"
        },
        "context": {
          "type": "string",
          "description": "Category 3: email context"
        },
        "handler": {
          "type": "string",
          "description": "Category 4: action required"
        },
        "confidence": {
          "type": "object",
          "description": "Confidence scores for each category",
          "properties": {
            "type": { "type": "number", "minimum": 0, "maximum": 1 },
            "senderIdentity": { "type": "number", "minimum": 0, "maximum": 1 },
            "context": { "type": "number", "minimum": 0, "maximum": 1 },
            "handler": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },
    "rulesMatched": {
      "type": "array",
      "description": "Rules that matched this email",
      "items": {
        "type": "object",
        "required": ["ruleId", "ruleName"],
        "properties": {
          "ruleId": {
            "type": "string"
          },
          "ruleName": {
            "type": "string"
          },
          "priority": {
            "type": "integer"
          },
          "conditionsMatched": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "actions": {
      "type": "array",
      "description": "Actions executed",
      "items": {
        "type": "object",
        "required": ["type", "status", "executedAt"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Action type"
          },
          "status": {
            "type": "string",
            "enum": ["success", "failed", "pending", "skipped"]
          },
          "executedAt": {
            "type": "string",
            "format": "date-time"
          },
          "parameters": {
            "type": "object",
            "description": "Action parameters"
          },
          "result": {
            "type": "object",
            "description": "Action result details"
          },
          "error": {
            "type": "string",
            "description": "Error message if failed"
          }
        }
      }
    },
    "calendarConflicts": {
      "type": "array",
      "description": "Calendar conflicts detected",
      "items": {
        "type": "object",
        "required": ["eventId", "startTime", "endTime", "title"],
        "properties": {
          "eventId": {
            "type": "string"
          },
          "calendar": {
            "type": "string",
            "enum": ["primary", "secondary"]
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time"
          },
          "title": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "attendees": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            }
          }
        }
      }
    },
    "explanation": {
      "type": "string",
      "description": "Human-readable explanation of the decision"
    },
    "feedback": {
      "type": "object",
      "description": "User feedback/corrections",
      "properties": {
        "correctedClassification": {
          "type": "object",
          "properties": {
            "reviewed": { "type": "string" },
            "type": { "type": "string" },
            "senderIdentity": { "type": "string" },
            "context": { "type": "string" },
            "handler": { "type": "string" }
          }
        },
        "feedbackText": {
          "type": "string"
        },
        "feedbackAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "modelVersion": {
      "type": "string",
      "description": "ML model version used"
    },
    "processingTime": {
      "type": "number",
      "description": "Processing time in milliseconds"
    },
    "digestIncluded": {
      "type": "boolean",
      "description": "Whether included in daily digest"
    },
    "reviewCount": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of times this email has appeared in summaries"
    },
    "reviewCountThreshold": {
      "type": "integer",
      "minimum": 1,
      "description": "User-defined threshold for review count"
    },
    "reviewCountExceeded": {
      "type": "boolean",
      "default": false,
      "description": "Flag indicating review count has exceeded threshold"
    },
    "lastReviewedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last review"
    }
  },
  "additionalProperties": false
}
